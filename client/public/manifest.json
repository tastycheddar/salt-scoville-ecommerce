{
  "name": "Salt & Scoville - Premium Hot Sauces & Spicy Seasonings",
  "short_name": "Salt & Scoville",
  "description": "Premium gourmet hot sauces, revolutionary micro salt blends, and spicy seasonings. AI-powered recommendations with FlavaDave. Free shipping over $50.",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0C0C0C",
  "theme_color": "#DC2626",
  "id": "/",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en-US",
  "categories": ["food", "shopping", "lifestyle", "gourmet", "spices"],
  "display_override": ["window-controls-overlay", "minimal-ui", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+saltandscoville",
      "url": "/share?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/recipes/import",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "icons": [
    {
      "src": "/favicon-16x16.png?v=5",
      "sizes": "16x16",
      "type": "image/png"
    },
    {
      "src": "/favicon-32x32.png?v=5",
      "sizes": "32x32",
      "type": "image/png"
    },
    {
      "src": "/apple-touch-icon.png?v=5",
      "sizes": "180x180",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/android-chrome-192x192.png?v=5",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/android-chrome-512x512.png?v=5",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/homepage-mobile.png",
      "sizes": "375x812",
      "type": "image/png",
      "form_factor": "narrow"
    },
    {
      "src": "/screenshots/homepage-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Shop Products",
      "short_name": "Shop",
      "description": "Browse our hot sauce collection",
      "url": "/products",
      "icons": [{ "src": "/favicon-96x96.png?v=5", "sizes": "96x96" }]
    },
    {
      "name": "View Recipes",
      "short_name": "Recipes",
      "description": "Discover spicy recipes",
      "url": "/recipes",
      "icons": [{ "src": "/favicon-96x96.png?v=5", "sizes": "96x96" }]
    },
    {
      "name": "Store Locator",
      "short_name": "Stores",
      "description": "Find retailers near you",
      "url": "/store-locator",
      "icons": [{ "src": "/favicon-96x96.png?v=5", "sizes": "96x96" }]
    },
    {
      "name": "FlavaDave Chat",
      "short_name": "FlavaDave",
      "description": "Get personalized hot sauce recommendations",
      "url": "/flava-dave",
      "icons": [{ "src": "/favicon-96x96.png?v=5", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "recipe_image",
          "accept": ["image/jpeg", "image/png", "image/webp"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred"
}